<%-include("../partials/header.ejs") %>
<div class="container">
        <h1 style="text-align: center; margin-top: 2rem;">Add New Comment to <%= campground.name%></h1>
    <div class="row">
        <div style="width:30%; margin:30px auto;">
                <form action="/campgrounds/<%= campground._id%>/comments" method="POST">
                    <div class="form-group">
                        <input class="form-control" autofocus  required aria-describeby="commcamp" type = "text" name="comment[text]" placeholder="text" maxlength="150">
						<small id="commcamp" class="form-text text-muted">max 150 characters</small>
                    </div>
                    
                    <div class="form-group">
                        <button class="btn btn-lg btn-primary btn-block"> Submit </button>
                    </div>
                     
        </form>
            <a href = "/campgrounds/<%=campground._id%>">Go Back</a>
        </div>

        
        
    </div>
    

</div>


<%-include("../partials/footer.ejs") %>