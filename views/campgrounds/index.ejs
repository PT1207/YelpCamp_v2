<%-include("../partials/header.ejs") %>
<div class="container">
   
	<header class="jumbotron" style="background: #abbaab;  /* fallback for old browsers */
background: -webkit-linear-gradient(to right, #ffffff, #abbaab);  /* Chrome 10-25, Safari 5.1-6 */
background: linear-gradient(to right, #ffffff, #abbaab); /* W3C, IE 10+/ Edge, Firefox 16+, Chrome 26+, Opera 12+, Safari 7+ */
">
        <div class="container">
		
            <h1>
				<svg style="color: brown;" width="1em" height="1em" viewBox="0 0 16 16" class="bi bi-award-fill" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
  <path d="M8 0l1.669.864 1.858.282.842 1.68 1.337 1.32L13.4 6l.306 1.854-1.337 1.32-.842 1.68-1.858.282L8 12l-1.669-.864-1.858-.282-.842-1.68-1.337-1.32L2.6 6l-.306-1.854 1.337-1.32.842-1.68L6.331.864 8 0z"/>
  <path d="M4 11.794V16l4-1 4 1v-4.206l-2.018.306L8 13.126 6.018 12.1 4 11.794z"/>
</svg>	
				Welcome to YelpCamp</h1>
        <h5 style="margin-left: 3rem;">View our hand-picked YelpCamps from all over the world !</h5>
			
			<div class="form-inline row mt-4 pt-2">
				<div class="col-md-4">
					
            <a href="/campgrounds/new" id="animabutt" class="btn btn-primary btn-large"><span>Add New Campground</span>				</a>
				</div>
				<div class="col-md-4">
					
				
			<form action="/campgrounds" method="GET"  style="width: 20%;" class="form-inline">
				<div class="form-group">
				<input class="form-control" type="text" placeholder="campground search ..." name="search">
					<input class="btn btn-large btn-primary" type="submit" value="Search">
				</div>
			</form>	
				</div>
			</div>
		
		
        </div>
    </header>
    
    
    <div class="row text-center" style=" display:flex; flex-wrap:wrap;">
<!-- 	handling the fuzzy search!	 -->
		<% if(noMatch !== null){ %>
		<div class="col-md-11">
		<h2><%= noMatch %></h2>
		</div>
		<% }%>
		
        <% campgrounds.forEach(function(campground){ %>
            <div class="col-md-3 col-sm-6 d-flex align-items-center justify-content-end">
                <div class="card">
                    <img class="card-img-top rounded msize"  src="<%= campground.image%>"> 
                     <div class="card-block">
                         <h5 class="card-title mt-1"><%= campground.name %> </h5>
					 </div>
					<span class="badge label-primary mb-1"><i class="fas fa-thumbs-up"></i> <%= campground.likes.length %></span>
						<p>
       						<a href="/campgrounds/<%= campground._id %>" class="btn btn-primary">More Info</a>
							
						</p>
					</div>
			  </div>
       		<%}) %>
    	</div>
	</div>

<%-include("../partials/footer.ejs") %>