<%-include("../partials/header.ejs") %>

<div class="container">
		<h1 style=" text-align: center; margin-top: 2rem;">Create a New Campground</h1>
    <div class="row">

        <div style="width:30%; margin:30px auto;">
               <form action="/campgrounds" method="POST" enctype="multipart/form-data">
                    <div class="form-group">
						<label for="campname">Campground Name:</label>
            <input class="form-control" autofocus id="campname" type = "text" name="campground[name]"  placeholder="name" required>
                    </div>
                    <div class="form-group">
						<label for="image">Image:</label>
                        <input class="form-control" required id="image" accept="image/*" type = "file" name="image">
                    </div>
                    <div class="form-group">
						<label for="desccamp">Description:</label>
                        <input class="form-control" required id="desccamp" aria-describeby="desccampo" type = "text" name="campground[description]" placeholder="description" maxlength="350">
						<small id="desccampo" class="form-text text-muted">max 350 characters</small>
                    </div>
					<div class="form-group">
						<label for="priceone">Price(per night):</label>
                        <input class="form-control" required id="priceone" type = "number" name="campground[price]" placeholder="price" min="0.01" step="0.01">
                    </div>
					<div class="form-group">
						<label for="bigcity">Weather API:</label>
					<input class="form-control" aria-describeby="cityair" required id="bigcity" type = "text" name="campground[city]" placeholder="big city nearby">
						<small id="cityair" class="form-text text-muted">Has to be a valid city!</small>
                    </div>
                    <div class="form-group">
                        <button class="btn btn-lg btn-primary btn-block"> Submit </button>
                    </div>
                     
        </form>
            <a href ="/campgrounds">Go Back</a>
        </div>

        
        
    </div>
    

</div>


<%-include("../partials/footer.ejs") %>