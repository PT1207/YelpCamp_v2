<%-include("partials/header.ejs") %>
<div class="container">
<h1 style="margin-top: 2rem; text-align: center;">Sign Up</h1>
	<div class="row">
	
		

 <div style=" width: 30%; margin:30px auto;"> 
	
		
<form action="/register" method="POST">
    	<div class="form-group">
	<label for="username">Username:</label>
	<input class="form-control" autofocus id="username" required type="text" name="username" placeholder="username">
		</div>
		<div class="form-group">
	<label for="passowrd">Password:</label>
    <input class="form-control" id="passowrd" required  type="password" name="password" placeholder="password">
		</div>
	<div class="form-group">
	<label for="avatar">Avatar URL:</label>
    <input class="form-control" id="avatar" type="text" required name="avatar" placeholder="you avatar image url">
		</div>
	
	<div class="form-group">
	<label for="firstName">First Name:</label>
    <input class="form-control" id="firstName" type="text" required  name="firstName"  placeholder="John">
		</div>
	<div class="form-group">
	<label for="lastName">Last Name:</label>
    <input class="form-control" id="lastName" required type="text" name="lastName" placeholder="Smith">
		</div>
	<div class="form-group">
	<label for="emailcam">Email:</label>
    <input class="form-control" id="emailcam" aria-describedby="gmail" type="email" required name="email" placeholder="ex: johnsmith@gmail.com">
		<small id="gmail" class="form-text text-muted">Has to be a @gmail.com email address!</small>
		</div>
		<div class="form-group">
	<label for="passwordlabel">Optional Admin Code:</label>
    <input class="form-control" id="passwordlabel" aria-describedby="adminC" type="text"  name="adminCode" placeholder="Admin Code">
			<small id="adminC" class="form-text text-muted">Leave Blank If Not Possessed !</small>
		</div>
		<div class="form-group">
    <button class="btn btn-lg btn-primary btn-block">Sign Up</button>
		</div>	
	<a href = "/campgrounds">Go Back</a>
			
</form>	
	
	
	
			</div>
		</div>
	</div>
<%-include("partials/footer.ejs") %>